<h1>Burgers!</h1>

<div id="addBurger">
  <h2>Add a Burger</h2>
  <form class="createBurger" action="/" method="POST">
    <div class="formGroup">
      <label for="burger">Burger: </label>
      <input type="text" id="burger" name="name" />
    </div>
    <button type="submit">ADD BURGER</button>
  </form>
</div>

<div class="burgers" id="burgersLeft">
  <h2>Alive Burgers!</h2>
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.name}}

          <form action='/{{this.id}}?_method=PUT' method="POST">
            <input type="hidden" name="devoured" value="true" />
            <button type="submit">DEVOUR!</button>
          </form>
        </li>
      {{/unlesss}}
    {{/each}}
  </ul>
</div>

<div class="burgers" id="burgersRight">
  <h2>Dead Burgers...</h2>

  <ul>
    {{#each burgers}}
     {{#if this.devoured}}
      <li>
        {{this.name}}
      </li>
  </ul>
</div>
